#!/usr/bin/env bash

case ${1} in
    maindrive)
        sudo mkdir -p /mnt/maindrive/
        sudo mount -t cifs -o username=Administrator //tertiaseptima/maindrive /mnt/maindrive/
        ;;
    bay)
        sudo mkdir -p /mnt/bay/
        sudo mount -t cifs -o username=Administrator //tertiaseptima/bay /mnt/bay/
        ;;
    *)
        echo "maindrive | bay"
        ;;
esac
