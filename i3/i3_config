set $mod Mod4
set $s1 Mod1+Mod4
set $s2 Control+Shift+Mod4
set $s3 Control+Mod1+Mod4
set $s4 Shift+Mod1+Mod4

# s1: Meta + Hyper
# s2: Control + Shift + Hyper
# s3: Control + Meta + Hyper
# s4: Control + Meta + Hyper

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8


# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesn’t scale on retina/hidpi displays.

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym Control+Shift+Mod1+Mod4+space exec i3-sensible-terminal

bindsym $s1+h focus left
bindsym $s1+j focus down
bindsym $s1+k focus up
bindsym $s1+l focus right

# kill focused window
bindsym $s1+q kill

bindsym $s1+o exec rofi -show run
bindsym $s1+b exec rofi -show window -window-format {c:20}{t}

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $h+d exec --no-startup-id i3-dmenu-desktop

# move focused window
bindsym $s3+h move left
bindsym $s3+j move down
bindsym $s3+k move up
bindsym $s3+l move right

mode "window" {
    bindsym h split h         ; exec ~/.config/i3/i3_mode_keys.sh "default" ; mode "default"
    bindsym v split v         ; exec ~/.config/i3/i3_mode_keys.sh "default" ; mode "default"
    bindsym f floating toggle ; exec ~/.config/i3/i3_mode_keys.sh "default" ; mode "default"

    bindsym l exec ~/.config/i3/i3_mode_keys.sh "window-layout" ; mode "window-layout"

    bindsym Escape exec ~/.config/i3/i3_mode_keys.sh "default" ; mode "default"
}

mode "window-layout" {
    bindsym t layout tabbed ; exec ~/.config/i3/i3_mode_keys.sh "default" ; mode "default"
    bindsym s layout stacking ; exec ~/.config/i3/i3_mode_keys.sh "default" ; mode "default"
    bindsym h layout splith ; exec ~/.config/i3/i3_mode_keys.sh "default" ; mode "default"
    bindsym v layout splitv ; exec ~/.config/i3/i3_mode_keys.sh "default" ; mode "default"

    bindsym Escape exec ~/.config/i3/i3_mode_keys.sh "default" ; mode "default"
}

bindsym $s1+w exec ~/.config/i3/i3_mode_keys.sh "window" ; mode "window"

mode "frame" {
    bindsym r exec i3-input -F 'rename workspace to "%s"' -P 'New name: ' ; exec ~/.config/i3/i3_mode_keys.sh "default" ; exec ~/.config/i3/i3_status.py ; mode "default"
    bindsym c exec ~/.config/i3/i3_new_workspace.py ; exec ~/.config/i3/i3_status.py ; exec ~/.config/i3/i3_mode_keys.sh "default" ; mode "default"

    bindsym Escape ; exec ~/.config/i3/i3_mode_keys.sh "default" ; mode "default"
}

bindsym $s3+f mode "frame" ; exec ~/.config/i3/i3_mode_keys.sh "frame"

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $h+d focus child

# switch to workspace
bindsym $s1+1 exec ~/.config/i3/i3_focus_workspace.py 1 ; exec ~/.config/i3/i3_status.py
bindsym $s1+2 exec ~/.config/i3/i3_focus_workspace.py 2 ; exec ~/.config/i3/i3_status.py
bindsym $s1+3 exec ~/.config/i3/i3_focus_workspace.py 3 ; exec ~/.config/i3/i3_status.py
bindsym $s1+4 exec ~/.config/i3/i3_focus_workspace.py 4 ; exec ~/.config/i3/i3_status.py
bindsym $s1+5 exec ~/.config/i3/i3_focus_workspace.py 5 ; exec ~/.config/i3/i3_status.py
bindsym $s1+6 exec ~/.config/i3/i3_focus_workspace.py 6 ; exec ~/.config/i3/i3_status.py
bindsym $s1+7 exec ~/.config/i3/i3_focus_workspace.py 7 ; exec ~/.config/i3/i3_status.py
bindsym $s1+8 exec ~/.config/i3/i3_focus_workspace.py 8 ; exec ~/.config/i3/i3_status.py
bindsym $s1+9 exec ~/.config/i3/i3_focus_workspace.py 9 ; exec ~/.config/i3/i3_status.py
bindsym $s1+0 exec ~/.config/i3/i3_focus_workspace.py 10 ; exec ~/.config/i3/i3_status.py

bindsym $s1+comma workspace prev_on_output ; exec ~/.config/i3/i3_status.py
bindsym $s1+period workspace next_on_output ; exec ~/.config/i3/i3_status.py

# move focused container to workspace
bindsym $s3+1 move container to workspace number 1
bindsym $s3+2 move container to workspace number 2
bindsym $s3+3 move container to workspace number 3
bindsym $s3+4 move container to workspace number 4
bindsym $s3+5 move container to workspace number 5
bindsym $s3+6 move container to workspace number 6
bindsym $s3+7 move container to workspace number 7
bindsym $s3+8 move container to workspace number 8
bindsym $s3+9 move container to workspace number 9
bindsym $s3+0 move container to workspace number 10

bindsym $s3+comma exec ~/.config/i3/i3_swap_workspace.py left ; exec ~/.config/i3/i3_status.py
bindsym $s3+period exec ~/.config/i3/i3_swap_workspace.py right ; exec ~/.config/i3/i3_status.py

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $s2+h resize shrink width  2 px or 2 ppt
bindsym $s2+j resize grow   height 2 px or 2 ppt
bindsym $s2+k resize shrink height 2 px or 2 ppt
bindsym $s2+l resize grow   width  2 px or 2 ppt

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    output DVI-I-1
    status_command ~/.config/i3/i3_status.sh DVI-I-1
}

bar {
    output DP-0.1
    status_command ~/.config/i3/i3_status.sh DP-0.1
}

bar {
    output DVI-D-0
    status_command ~/.config/i3/i3_status.sh DVI-D-0
}
