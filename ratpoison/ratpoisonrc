## S1 - M-s-<LOWER_KEY>
## S2 - C-s-<UPPER_KEY>
## S3 - C-M-s-<LOWER_KEY>
## S4 - M-s-<UPPER_KEY>

## Top level keybindings

definekey top M-s-o exec dmenu_run

definekey top M-s-h focusleft
definekey top M-s-j focusdown
definekey top M-s-k focusup
definekey top M-s-l focusright

definekey top M-s-c remove
definekey top M-s-n next
definekey top M-s-p prev

definekey top M-s-1 exec rpws 1
definekey top M-s-2 exec rpws 2
definekey top M-s-3 exec rpws 3
definekey top M-s-4 exec rpws 4

definekey top C-s-H resize -50 0
definekey top C-s-J resize 0 +50
definekey top C-s-K resize 0 -50
definekey top C-s-L resize +50 0

# Leaders
definekey top M-s-w readkey window

definekey top M-s-R source /home/leslie/.ratpoisonrc

newkmap window

definekey window h hsplit
definekey window v vsplit
